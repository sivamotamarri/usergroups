%h2.label-44{:style => "border:none;"} Create Post
= semantic_form_for @post ,:remote=> true do |f| 
  .error{:class => "el-cont"}    
    %li{:style => "float:right;", :class => "inline-errors  post_title"} &nbsp;
    = f.input :title , :placeholder => "Title of Post", :label => false, :input_html => {:style => "margin-bottom: 10px;", :class => "input-b size-e"}
    
  
  = f.input :event_title , :placeholder => "Title of Event",:label => false,  :input_html => {:style => "margin-bottom: 10px;", :class => "input-b size-e",  data: {autocomplete_source: title_list_events_path}} 
  = f.hidden_field :event_id
  = f.hidden_field :chapter_id
  
  .error{:class => "el-cont"}
    %li{:style => "float:right;", :class => "inline-errors  post_description"} &nbsp;
    = f.text_area :description , :placeholder => "Post Description", :label => false, :style => "margin-bottom: 10px;height:80px;display:block;", :class => "input-b size-e"
  #spinner.spinner{:style => 'display:none;margin-right:10px;float:right;'}
    %img{:src => "/assets/spinner.gif", :alt => "Loading" , :id => 'img-spinner'}/
