%h2 Compose
#compose
  = simple_form_for @message , :url => compose_create_path do |f|
    = f.label :recipients, required: false
    = f.input_field :recipients, data: { autocomplete_source: User.all.map(&:name) }
    = f.label :subject, required: false
    = f.input_field :subject
    = f.label :body, required: false
    = f.input_field :body, as: :text
    = f.input :attachment, as: :file
    = f.input :sender_id , as: :hidden, input_html: {value: current_user.id}
    = f.input :sender_type , as: :hidden, input_html: {value: "User"}
    = f.button :submit, 'Send message'
